/*==============================
	Colors
==============================*/
$white = #fff
$black = #000
$dark = #232122
$glass = #F8F8F8
$grey = #C2C2C2
$darkgrey = #535051
$blue = #2568b0
$purple = #423baa
$lightblue = #eef0fe
$green = #24ad6e
$red = #e23353

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Nunito', sans-serif
	font-weight 400
	background-color $white
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	cursor pointer
	&:focus
		outline none
a
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property background-color, border-color
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $dark
	text-shadow none
::selection
	background $white
	color $dark
	text-shadow none

::-webkit-input-placeholder
	color $grey
	opacity 1
::-moz-placeholder
	color $grey
	opacity 1
:-moz-placeholder
	color $grey
	opacity 1
:-ms-input-placeholder
	color $grey
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px

:focus-visible
	outline 0px dotted

.tab-content
	width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity .4s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .5s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

.row--grid
	margin-right -10px
	margin-left -10px
	.col-6
	.col-12
		padding-left 10px
		padding-right 10px
	@media (min-width: 768px)
		margin-right -15px
		margin-left -15px
		.col-6
		.col-12
			padding-left 15px
			padding-right 15px

/*==============================
	Header
==============================*/
.header
	position fixed
	width 100%
	top 0
	left 0
	z-index 99
	background-color transparent
	&:before
		content ''
		position absolute
		z-index -1
		display block
		width 100%
		left 0
		top 0
		height 0
		background-color transparent
		transition .5s ease
		pointer-events none
		border-bottom 1px solid transparent
	&--active
		.header__btn
			span
				background-color $dark
		.header__logo-white
			opacity 0
		.header__logo-dark
			opacity 1
		.header__logo
			pointer-events auto
		&:before
			height 80px
			background-color $white
			border-color rgba($blue, .12)
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		position relative
		height 80px
		width 100%
	&__logo
		z-index 1
		width auto
		height 50px
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		position relative
		margin-left 40px
		pointer-events none
		img
			height 50px
			width auto
	&__logo-white
		position relative
		opacity 1
		transition opacity .4s ease
	&__logo-dark
		position absolute
		top 0
		left 0
		opacity 0
		transition opacity .4s ease
	&__btn
		position absolute
		width 24px
		height 22px
		display block
		left 0
		span
			position absolute
			left 0
			width 24px
			height 2px
			background-color $white
			border-radius 3px
			transition .5s ease
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 8px
		&--active
			span
				&:first-child
					transform rotate(45deg)
					top 10px
				&:nth-child(2)
					opacity 0
				&:last-child
					width 24px
					transform rotate(-45deg)
					top 10px
	&__tagline
		display none
	&__nav
		position fixed
		width 250px
		top 80px
		bottom 0
		left 0
		background-color $dark
		padding 30px 15px 0
		transition transform .5s ease
		transform translate3d(-250px, 0, 0)
		&--active
			transform translate3d(0, 0, 0)
		li
			display block
			margin-bottom 25px
			&:last-child
				margin-bottom 0
			&.active
				a
					color $grey
		a
			display inline-block
			font-size 14px
			line-height 24px
			font-weight 600
			color $white
			text-transform uppercase
			&:hover
				color $grey
	&__dropdown
		position relative
		display block
		width auto
		.dropdown-toggle
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			svg
				width 14px
				height auto
				fill $white
				margin-left 3px
				margin-top 1px
				transition fill .5s ease
			&:hover
			&[aria-expanded="true"]
				color $grey
				svg
					fill $grey
	&__dropdown-menu
		position absolute
		background-color $white
		padding 15px 20px
		display block
		width 180px
		text-align left
		z-index -1
		pointer-events none
		opacity 0
		border-radius 16px
		transition .5s ease
		transition-property opacity, margin-top, transform
		margin-top 0
		top 0
		border 1px solid rgba($blue, .12)
		transform translate3d(0px, 24px, 0px)
		li
			padding 0
			margin-bottom 10px
			&:last-child
				margin-bottom 0
		a
			font-size 16px
			line-height 26px
			color $dark
			text-transform none
			font-weight 400
			&:hover
				color $purple
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 10px
	&__cta
		display flex
		flex-direction row
		justify-content center
		align-items center
		position relative
		height 50px
		background linear-gradient(65deg, $purple 0%, $blue 100%)
		border-radius 14px
		padding 0 26px
		overflow hidden
		&:before
			content ''
			position absolute
			display flex
			flex-direction row
			justify-content center
			align-items center
			top 0
			bottom 0
			left 0
			right 0
			z-index 1
			background linear-gradient(65deg, $blue 0%, $purple 100%)
			opacity 0
			transition opacity .5s ease
			pointer-events none
			border-radius 14px
		&:after
			content ''
			position absolute
			display flex
			flex-direction row
			justify-content center
			align-items center
			height 40px
			width calc(100% - 10px)
			border 2px solid rgba($white, .1)
			z-index 2
			pointer-events none
			border-radius 12px
		span
			position relative
			z-index 2
			color $white
			font-size 13px
			font-weight 600
			letter-spacing .8px
			text-transform uppercase
		&:hover
			color $white
			&:before
				opacity 1
	@media (min-width: 576px)
		&__logo
			margin-left 45px
		&__tagline
			display block
			line-height 24px
			color $white
			font-size 14px
			transition color .5s ease
			margin-right auto
			margin-left 20px
			font-weight 400
		&__nav
