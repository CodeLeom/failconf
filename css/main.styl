		&__nav
			padding-left calc((100vw - 930px)/2)
	@media (min-width: 1200px)
		&__btn
			display none
		&__logo
			margin 0
		&__nav
			position relative
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			background-color transparent
			top auto
			bottom auto
			left auto
			right auto
			width auto
			transform translate3d(0, 0, 0)
			padding 0
			margin-right auto
			li
				display block
				margin-right 45px
				margin-bottom 0
				&:last-child
					margin-right 0
			a
				display flex
				flex-direction row
				justify-content center
				align-items center
				height 40px
				color $white
				font-size 16px
				font-weight 400
				text-transform none
				&:hover
					color $grey
		&__dropdown-menu
			transform translate3d(0px, 40px, 0px)
			margin-top -10px
			li
				margin-right 0
			a
				color $dark
				justify-content flex-start
				&:hover
					color $purple
			&.show
				margin-top 0
		&--active
			.header__nav
				a
					color $dark
					&:hover
						color $purple
			.header__dropdown
				.dropdown-toggle
					svg
						fill $dark
					&:hover
					&[aria-expanded="true"]
						color $purple
						svg
							fill $purple

